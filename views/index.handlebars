<section class="container">
  <ul class="list-unstyled pt-2 row">
    {{#each data}}
    <li class="bgDark p-2 col-12">
      <header class="row">
        <a href="https://stackoverflow.com{{link}}" class="col-xs-12 col-md-6 col-lg-6">{{text}}</a>
        <button class="btn btn-primary col-xs-12 col-md-6 col-lg-6">Add A Comment</button>
      </header>
      <div class="row">
        <div class="col-12">
          <span class="text-dark">{{age}}</span>
          <p class="text-dark">{{company}}</p>
          <p class="text-dark">{{pay}}</p>
          <ul class="list-unstyled">
            {{#each tags}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="hide commentBox row">
        <div class="col-12">
          <form>
            <textarea name="comment" cols="30" rows="10"></textarea>
          </form>
          <button type="submit" value="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</section>